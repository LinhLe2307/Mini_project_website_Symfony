{% extends 'base.html.twig' %}

{% block title %}SLC Food Website!{% endblock %}

{% block body %}
<div class="homepage-container">
    <div class="text-center">
        <h1 class="title mt-5">Bring people together with great food</h1>
        <button class="btn btn-primary btn-lg mt-5 mb-5"><a href="{{ path('app_contact')}}" style="color: #fff">Let's talk</a></button>
        <div>
            <img src="https://images.unsplash.com/photo-1512621776951-a57141f2eefd?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80"
                alt="Fruit bowl" width=80% />
        </div>
    </div>

    <!-- Grid container -->
    <div class="text-center pt-4 pb-4 pr-4 mt-5" style="background-color: rgb(243, 190, 90);">
        <!--Grid row-->
        <div class="row" style="margin: 0 !important">
            <!--Grid column-->
            <div class="col-lg-6 col-md-12 mb-4 mb-md-0" style="padding-left: 0 !important">
                <img src="https://images.unsplash.com/photo-1504754524776-8f4f37790ca0?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80"
                    alt="breakfast" width=100%/>
                <!--Grid column-->
            </div>

            <!--Grid column-->
            <div class="text-center col-lg-6 col-md-12" style="margin: auto 0;">
                <h1 class="description-text p-3">Delicious food creates memories</h1>
                <p class="description-text p-3">This is a food studio that not just caters out deliciousness, but lives by the philosophy that
                    nothing brings people together like good food. Whatever the occasion that you need our food for,
                    whatever dietary requirements, we will make it happen.</p>
                <button class="btn btn-primary btn-lg"><a href="{{ path('app_about_us') }}" style="color: #fff">Our story</a></button>
                <!--Grid column-->
            </div>
        </div>
        <!-- Grid container -->

    </div>
    <div class="mt-5 mb-5">
        <h1 class="text-center">Our offers for your occasion or event</h1>
        <ul class="row" style="margin: 0 auto; padding: 0 !important;">
            {% for key, meal in meals %}
            <!-- <li class="list-group-item text-center"> -->
            <li class="meals-list text-center col-6 mt-5 mb-5">
                <h3>{{key}}</h3>
                <p>{{meal}}</p>
            </li>
            {% endfor %}
        </ul>
    </div>
    <div class="text-center">
        <img src="https://images.unsplash.com/photo-1606787366850-de6330128bfc?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80"
            alt="Fruit bowl" width=80% height="500px" class="breakfast-image" />
    </div>

    <div class="slogan-container text-center p-5 mt-5">
        <h1 class="mb-5">First, we eat. Then we do everything else. Let us take
            care of food at your special event.</h1>
        <button class="btn btn-primary btn-lg"><a href="{{ path('app_contact')}}" style="color: #fff">Get in touch</a></button>
    </div>

</div>
{% endblock %}